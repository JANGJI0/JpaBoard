	.circle-menu {
	  position: relative;
	  width: 300px;
	  height: 300px;
	  margin: 80px auto;
	}
	
	.circle-menu a {
	  position: absolute;
	  width: 120px;
	  height: 120px;
	  border-radius: 50%;
	  background: rgba(255, 153, 0, 0.1); /* ✅ 연한 주황 배경 */
	  color: white;
	  text-align: center;
	  text-decoration: none;
	  font-weight: bold;
	  display: flex;
	  align-items: center;
	  justify-content: center;
	  transition: transform 0.3s, box-shadow 0.3s;
	  border: 2px solid #ffaa33; /*주황 테두리 */
 	  box-shadow: 0 0 10px #ffaa33, 0 0 40px #ffaa33 inset; /*주황 네온 효과 */
	  backdrop-filter: blur(6px);
	}
	
	.circle-menu a:hover {
	  transform: scale(1.05);
	  box-shadow: 0 0 15px rgba(255, 153, 0, 0.4); /* 주황 glow 강화 */
	}
	
	.circle-menu a .emoji-text {
	  display: flex;
	  flex-direction: column;
	  align-items: center;
	}
	
	.emoji {
	  font-size: 1.6rem;
	  margin-bottom: 4px;
	}
	
	.label {
	  font-size: 0.85rem;
	}
	
	/* 위치 */
